<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.ProfileFrag">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="match_parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:id="@+id/cardbasicinfo"
                app:cardCornerRadius="10dp"
                app:cardElevation="10dp">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">



                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_marginTop="20dp"
                        android:id="@+id/profile_imageviewprofile"
                        android:layout_height="wrap_content">


                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/profile_imageviewprofiles"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_centerHorizontal="true"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>


                    <RelativeLayout
                        android:id="@+id/relativeLayout1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:alpha="0.8"
                        android:layout_marginTop="10dp"
                        android:layout_below="@+id/profile_imageviewprofile"
                        android:elevation="20dp"
                        >

                        <TextView
                            android:id="@+id/profile_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:fontFamily="@font/montserratbold"
                            android:text=""
                            android:textColor="@color/blackdark"
                            android:textSize="22sp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_below="@id/relativeLayout1"
                        android:layout_marginBottom="10dp"
                        android:layout_height="wrap_content"
                        >

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_marginTop="20dp"
                            android:id="@+id/rrusername"
                            android:layout_height="wrap_content">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/imageviewusername"
                                android:layout_width="45dp"
                                android:layout_height="40dp"
                                android:src="@drawable/profile" />

                            <TextView
                                android:id="@+id/profile_username"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
                                android:layout_toRightOf="@+id/imageviewusername"
                                android:text=""
                                android:layout_centerVertical="true"
                                android:layout_marginTop="5dp"
                                android:textColor="@color/blackdark"
                                android:textSize="18sp"
                                android:textStyle="bold" />


                        </RelativeLayout>


                        <RelativeLayout
                            android:id="@+id/rrslug"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/rrusername"
                            android:layout_marginTop="20dp">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/imageviewslug"
                                android:layout_width="45dp"
                                android:layout_height="40dp"
                                android:src="@drawable/parking" />

                            <TextView
                                android:id="@+id/profile_slug"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="8dp"
                                android:layout_marginTop="5dp"
                                android:layout_toRightOf="@+id/imageviewslug"
                                android:text=""
                                android:textColor="@color/blackdark"
                                android:textSize="18sp"
                                android:textStyle="bold" />


                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/rrbranchCode"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/rrslug"
                            android:layout_marginTop="20dp">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/imageviewBranchCode"
                                android:layout_width="45dp"
                                android:layout_height="40dp"
                                android:src="@drawable/parking" />

                            <TextView
                                android:id="@+id/profile_branchCode"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="8dp"
                                android:layout_marginTop="5dp"
                                android:layout_toRightOf="@+id/imageviewBranchCode"
                                android:text=""
                                android:textColor="@color/blackdark"
                                android:textSize="18sp"
                                android:textStyle="bold" />


                        </RelativeLayout>


                        <RelativeLayout
                            android:id="@+id/rrSetting"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/rrbranchCode"
                            android:layout_marginTop="20dp">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/imageviewSetting"
                                android:layout_width="45dp"
                                android:layout_height="40dp"
                                android:src="@drawable/setting" />

                            <TextView
                                android:id="@+id/setting"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="8dp"
                                android:layout_marginTop="5dp"
                                android:layout_toRightOf="@+id/imageviewSetting"
                                android:text="Sync Rates"
                                android:textColor="@color/blackdark"
                                android:textSize="18sp"
                                android:textStyle="bold" />


                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/rrOfflineOnline"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/rrSetting"
                            android:layout_marginTop="20dp">


                            <TextView
                                android:id="@+id/offlineOnline"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="8dp"
                                android:layout_marginTop="5dp"
                                android:text="Auto Sync"
                                android:textColor="@color/blackdark"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <Switch
                                android:id="@+id/switchautosync"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="50dp"
                                android:layout_marginTop="5dp"
                                android:layout_toRightOf="@id/offlineOnline"
                                android:checked="true"
                                android:switchMinWidth="100dp"
                                android:textOff="OFF"
                                android:textOn="ON" />


                        </RelativeLayout>


                        <RelativeLayout
                            android:id="@+id/rrLogout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/rrOfflineOnline"
                            android:layout_marginTop="20dp">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/imageviewLogout"
                                android:layout_width="45dp"
                                android:layout_height="40dp"
                                android:src="@drawable/logout" />

                            <TextView
                                android:id="@+id/logout"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="8dp"
                                android:layout_marginTop="5dp"
                                android:layout_toRightOf="@+id/imageviewLogout"
                                android:text="Logout"
                                android:textColor="@color/blackdark"
                                android:textSize="18sp"
                                android:textStyle="bold" />


                        </RelativeLayout>




                    </RelativeLayout>


                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </RelativeLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>