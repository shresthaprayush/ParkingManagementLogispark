<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="10dp"
    android:layout_marginTop="5dp"
    android:id="@+id/cardviewrecentbills"
    android:layout_height="30sp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linearlatou">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/sn_textviewcard"
            android:layout_marginTop="2dp"
            android:textSize="18sp"
            android:freezesText="true"
            android:layout_weight="1.2"
            android:layout_marginRight="20dp"
            android:singleLine="false"
            android:focusable="true"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:text="S.No"
            android:textStyle="normal"
            android:gravity="center"
            android:layout_marginEnd="20dp" />

        <TextView
            android:id="@+id/token_textviewcard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:text="Token"
            android:ellipsize="marquee"
            android:layout_toRightOf="@+id/sn_textviewcard"
            android:maxLength="20"
            android:gravity="center"
            android:textSize="18sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/amount_textviewcard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Amount"
            android:layout_marginTop="2dp"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:ellipsize="marquee"
            android:layout_toRightOf="@+id/token_textviewcard"
            android:maxLength="20"
            android:gravity="center"
            android:textSize="18sp"
            android:textStyle="normal" />


        <ImageView
            android:id="@+id/sync_textviewcard"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="3dp"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1.4"
            android:ellipsize="marquee"
            android:layout_toRightOf="@+id/token_textviewcard"
            android:maxLength="20"
            android:gravity="center"
            android:textSize="25sp"
            android:textStyle="normal" />

    </LinearLayout>


</androidx.cardview.widget.CardView>